{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"lib": ["ES2021"],
		"outDir": "./build",
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"paths": {
			"highlight.js": ["./src/@types/highlight.js"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "./src/@types"]
}
