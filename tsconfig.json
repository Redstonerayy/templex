{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"lib": ["ES2021"],
		"outDir": "./build",
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
