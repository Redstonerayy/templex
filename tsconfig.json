{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"lib": ["ES2021"],
		"outDir": "./build",
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"baseUrl": "."
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "./src/@types"]
}
