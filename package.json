{
	"name": "templex",
	"author": "Redstonerayy",
	"license": "GPL-3.0-or-later",
	"version": "0.1.0",
	"scripts": {
		"dev": "yarn tsc --watch",
		"build": "yarn tsc --build",
		"start": "node dist/main.js",
		"test": "node dist/main.js build --configdir ./example/config",
		"doc": "yarn && yarn tsc --build && cp -r ./doc/* ./example/content/ && node dist/main.js build --configdir ./example/config",
		"clean": "rm -rf ./dist && rm -rf ./public"
	},
	"bin": {
		"templex": "./dist/main.js"
	},
	"type": "module",
	"dependencies": {
		"@highlightjs/cdn-assets": "^11.8.0",
		"chokidar": "^3.5.3",
		"markdown-it": "^13.0.1",
		"nunjucks": "^3.2.4",
		"sass": "^1.64.2",
		"yaml": "^2.3.1"
	},
	"devDependencies": {
		"@types/markdown-it": "^13.0.0",
		"@types/node": "^20.4.8",
		"@types/nunjucks": "^3.2.3",
		"typescript": "^5.1.6"
	}
}
